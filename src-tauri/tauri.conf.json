{
    "$schema": "https://schema.tauri.app/config/1",
    "build": {
        "beforeDevCommand": "cd .. && npm run dev",
        "beforeBuildCommand": "cd .. && npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "tesera",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "Tesera",
                "url": "index.html",
                "width": 1180,
                "height": 820,
                "center": true
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": [
                "nsis"
            ],
            "identifier": "com.tesera.app",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [
                "out"
            ]
        }
    }
}